<% include ../partials/header %>

<section class="main">
    <div class="heading container">
        <h1 class="heading__title">Agencias</h1>
        <div class="heading__controls">
            <div class="table-filter__group">
                <div class="table-filter__item">
                    <p class="table-filter__title">Estados</p>
                    <select class="modal-form__input modal-form__input--select" name="" id="filter-agency-state">
                            <option value="">Seleccione uno</option>
                    </select>
                </div>
                <div class="table-filter__item">
                    <p class="table-filter__title">Municipio</p>
                    <select class="modal-form__input modal-form__input--select" name="" id="filter-agency-city">
                            <option value="">Seleccione uno</option>
                    </select>
                </div>
            </div>
            <a class="table-filter__btn" href="#" data-toggle="modal" data-target=".form-agency" id="btn-add-agency">
                Agregar agencia
            </a>
        </div>
        <table class="table">
            <thead class="table__head">
                <tr class="table__row-th">
                    <th class="table__th table__th--is-active">NOMBRE <span class=""></span></th>
                    <th class="table__th">MANAGER <span class=""></span></th>
                    <th class="table__th">ESTADO <span class=""></span></th>
                    <th class="table__th">MUNICIPIO <span class=""></span></th>
                    <th class="table__th">CP <span class=""></span></th>
                    <th class="table__th">DIRECCION <span class=""></span></th>
                </tr>
            </thead>
            <tbody class="table__body" id="table-agency">		
            </tbody>
        </table>
    </div>

    <!--Agency form-->

    <div class="modal--fade modal fade form-agency" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="add-branch">
        <div class="modal-dialog modal--form-size">
            <form id="agency-form">
                <div class="modal-form modal-content">
                    <div class="modal-form__header">
                        <h2 class="modal-form__title" id="form-agency_title">Agregar agencia</h2>
                        <i class="modal-form__exit fas fa-times" id="modal-exit" data-dismiss="modal" aria-label="Close"></i>
                    </div>
                    <div class="modal-form__body">
                        <div class="modal-form__group modal-form__group--small">
                            <label for="" class="modal-form__label">Nombre</label>
                            <input id="form-agency_name" type="text" class="modal-form__input" name="nombre">
                        </div>
                        <div class="modal-form__group modal-form__group--small">
                            <label for="" class="modal-form__label">Estados</label>
                            <input id="form-agency_state" type="text" class="modal-form__input" name="estado">				  
                        </div>
                        <div class="modal-form__group modal-form__group--small">
                            <label for="" class="modal-form__label">Ciudad</label>
                            <input id="form-agency_city" type="text" class="modal-form__input" name="ciudad">
                        </div>
                        <div class="modal-form__group modal-form__group--small">
                            <label for="" class="modal-form__label">C.P.</label>
                            <input id="form-agency_cp" type="text" class="modal-form__input" name="cp">							  
                        </div>
                        <div class="modal-form__group modal-form__group--large">
                            <label for="" class="modal-form__label">Dirección</label>
                            <input id="form-agency_address" type="text" class="modal-form__input" name="direccion">
                        </div>
                    </div>
                    <div class="modal-form__footer">
                        <div class="modal-form__btn-group">
                            <a href="#" class="modal-form__btn modal-form__btn--cancel" data-dismiss="modal" aria-label="Close">Cancelar</a>
                            <a href="#" class="modal-form__btn modal-form__btn--confirm" id="agency-add" data-dismiss="modal" aria-label="Close">Confirmar</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
    <div class="modal--fade modal fade save-changes" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="add-branch">
      <div class="modal-dialog modal-dialog-centered">
          <div class="modal-form modal-content modal-form--text-centered">
              <p class="modal-form__delete-title">¿Seguro que desea guardar los cambios?</p>
              <p class="modal-form__delete-description">Este elemento presenta cambios</p>
              <div class="modal-form__footer modal-form__footer--centered">
                  <div class="modal-form__btn-group modal-form__btn-group--centered">
                      <a href="#" class="modal-form__btn modal-form__btn--cancel" data-dismiss="modal" aria-label="Close" data-toggle="modal" data-target=".edit-branch">No</a>
                      <a href="#" class="modal-form__btn modal-form__btn--confirm" data-dismiss="modal" aria-label="Close">Sí</a>
                  </div>
              </div>
          </div>
      </div>
    </div>
    <div class="modal--fade modal fade delete-element" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="add-branch">
      <div class="modal-dialog modal-dialog-centered">
          <div class="modal-form modal-content modal-form--text-centered">
              <p class="modal-form__delete-title">¿Seguro que desea eliminar este elemento?</p>
              <div class="modal-form__footer modal-form__footer--centered">
                  <div class="modal-form__btn-group modal-form__btn-group--centered">
                      <a href="#" class="modal-form__btn modal-form__btn--cancel" data-dismiss="modal" aria-label="Close">No</a>
                      <a href="#" id="btn-remove-agency" class="modal-form__btn modal-form__btn--confirm" data-dismiss="modal" aria-label="Close">Sí</a>
                  </div>
              </div>
          </div>
      </div>
    </div>
</section>

<% include ../partials/footer %>
<script src="/js/ajax/admin/agency.js"></script>
<script src="/js/Script.js"></script>
<script src="/js/sessionControl.js"></script>
