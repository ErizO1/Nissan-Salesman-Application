
<% include ../partials/header %>

<section class="main">
    <div class="heading container">
        <h1 class="heading__title">Emploeados</h1>
        <div class="heading__controls">
            <div class="table-filter__group"></div>
            <a class="table-filter__btn" href="#" data-toggle="modal" data-target=".add-employee">
                Agregar empleado
            </a>
        </div>
        <table class="table">
            <thead class="table__head">
                <tr class="table__row-th">
                    <th class="table__th">Nombre <span class=""></span></th>
                    <th class="table__th">Teléfono <span class=""></span></th>
                    <th class="table__th">Email <span class=""></span></th>
                    <th class="table__th">Dirección <span class=""></span></th>
                </tr>
            </thead>
            <tbody class="table__body" id="table-employees">			
            </tbody>
        </table>
    </div>

<!--Add employee-->
<div class="modal--fade modal fade add-employee" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="add-branch">
        <div class="modal-dialog modal--form-size">
            <div class="modal-form modal-content">
                <form id="add-employee-form">
                    <div class="modal-form__header">
                        <h2 class="modal-form__title" id="add-gerente">Agregar gerente</h2>
                        <i class="modal-form__exit fas fa-times" id="modal-exit" data-dismiss="modal" aria-label="Close"></i>
                    </div>
                    <div class="modal-form__body">
                        <div class="modal-form__group modal-form__group--small">
                            <label for="" class="modal-form__label">Usuario</label>
                            <input type="text" class="modal-form__input" name="username" id="username">
                        </div>
                        <div class="modal-form__group modal-form__group--small">
                            <label for="" class="modal-form__label">Contraseña</label>
                            <input type="password" class="modal-form__input" name="password" id="password">
                        </div>
                        <div class="modal-form__group modal-form__group--small">
                            <label for="" class="modal-form__label">Nombre</label>
                            <input type="text" class="modal-form__input" name="nombre" id="nombre">
                        </div>
                        <div class="modal-form__group modal-form__group--small">
                            <label for="" class="modal-form__label">Apellido Paterno</label>
                            <input type="text" class="modal-form__input" name="apellidoP" id="apellidoP">
                        </div>
                        <div class="modal-form__group modal-form__group--small">
                            <label for="" class="modal-form__label">Apellido Materno</label>
                            <input type="text" class="modal-form__input" name="apellidoM" id="apellidoM">
                        </div>
                        <div class="modal-form__group modal-form__group--small">
                            <label for="" class="modal-form__label">Teléfono</label>
                            <input type="text" class="modal-form__input" name="telefono" id="telefono">
                        </div>
                        <div class="modal-form__group modal-form__group--small">
                            <label for="" class="modal-form__label">Correo</label>
                            <input type="email" class="modal-form__input" name="correo" id="correo">
                        </div>
                        <p class="modal-form__label modal-form__label--title">Agencia</p>
                        <div class="modal-form__group modal-form__group--small">
                            <label for="" class="modal-form__label">Estado</label>
                            <select class="modal-form__input modal-form__input--select" name="estado" id="ciudad">
                                <option value="">Seleccione uno</option>
                            </select>
                        </div>
                        <div class="modal-form__group modal-form__group--small">
                            <label for="" class="modal-form__label">Municipio</label>
                            <select class="modal-form__input modal-form__input--select" name="ciudad" id="ciudad">
                                <option value="">Seleccione uno</option>
                            </select>								  
                        </div>
                        <div class="modal-form__group modal-form__group--large">
                            <label for="" class="modal-form__label">Dirección</label>
                            <input type="text" class="modal-form__input" name="domicilio">
                        </div>
                        <div class="modal-form__group modal-form__group--small">
                            <label for="" class="modal-form__label">CP</label>
                            <input type="text" class="modal-form__input" name="cp">
                        </div>
                        <div class="modal-form__group modal-form__group--small">
                            <label for="" class="modal-form__label">Agencia</label>
                            <select class="modal-form__input modal-form__input--select" name="agencia" id="agencia">
                                <option value="">Seleccione uno</option>
                            </select>							  
                        </div>
                    </div>
                    <div class="modal-form__footer">
                        <div class="modal-form__btn-group">
                            <a href="#" class="modal-form__btn modal-form__btn--cancel" data-dismiss="modal" aria-label="Close">Cancelar</a>
                            <a href="#" id="add-manager-submit" class="modal-form__btn modal-form__btn--confirm" data-dismiss="modal" aria-label="Close">Confirmar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal--fade modal fade save-changes" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="add-branch">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-form modal-content modal-form--text-centered">
                <p class="modal-form__delete-title">¿Seguro que desea guardar los cambios?</p>
                <p class="modal-form__delete-description">Este elemento presenta cambios</p>
                <div class="modal-form__footer modal-form__footer--centered">
                    <div class="modal-form__btn-group modal-form__btn-group--centered">
                        <a href="#" class="modal-form__btn modal-form__btn--cancel" data-dismiss="modal" aria-label="Close" data-toggle="modal" data-target=".edit-employee">No</a>
                        <a href="#" class="modal-form__btn modal-form__btn--confirm" data-dismiss="modal" aria-label="Close">Sí</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal--fade modal fade delete-element" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="add-branch">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-form modal-content modal-form--text-centered">
                <p class="modal-form__delete-title">¿Seguro que desea eliminar este elemento?</p>
                <div class="modal-form__footer modal-form__footer--centered">
                    <div class="modal-form__btn-group modal-form__btn-group--centered">
                        <a href="#" class="modal-form__btn modal-form__btn--cancel" data-dismiss="modal" aria-label="Close">No</a>
                        <a href="#" id="btn-remove-employee" class="modal-form__btn modal-form__btn--confirm" data-dismiss="modal" aria-label="Close">Sí</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

<% include ../partials/footer %>
<script src="/js/ajax/manager/employee.js"></script>
<script src="/js/Script.js"></script>
<script src="/js/sessionControl.js"></script>
</body>
</html>